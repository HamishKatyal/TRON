		<script>
            const scriptURL = 'https://script.google.com/macros/s/AKfycbyBroA-qF82JWFLpwh3yVpdn4GSR44igw5dxOe7qwXTmVQCjuhlJfREwi1m27RsA71i/exec'
            const form = document.forms['google-sheet']
          
            form.addEventListener('submit', e => {
              e.preventDefault()
              fetch(scriptURL, { method: 'POST', body: new FormData(form)})
                .then(response => alert("Yay! You have now been registered. Please Login to continue."))
                .catch(error => console.error('Error!', error.message))
            })
